general {
        colors = true
        interval = 5
}

order += "ipv6"

order += "path_exists VPN"
order += "wireless wlp3s0"
order += "ethernet enp2s0"
order += "volume master"
order += "battery 0"
order += "disk /"
order += "memory"
order += "load"
order += "tztime local"
order += "tztime berlin"

wireless wlp3s0{
	format_up = "W: (%quality at %essid, %bitrate / %frequency) %ip"
        format_down = "W: down"
}

ethernet enp2s0{
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S %Z"
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
        hide_if_equals_localtime = true
}

load {
        format = "Load %5min"
        max_threshold = "3"
}

memory {
        format = "RAM %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "free %free | ttl %total"
}

read_file uptime {
        path = "/proc/uptime"
}
